{
  "manifest_version": 3,
  "name": "Personal Recruiter - Job Application Tracker",
  "version": "1.0.3",
  "description": "Track job applications across job boards and career sites. Automatically extract job details and organize progress.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "identity",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://linkedin.com/*",
    "https://www.linkedin.com/*",
    "https://indeed.com/*", 
    "https://www.indeed.com/*",
    "https://glassdoor.com/*",
    "https://www.glassdoor.com/*",
    "https://monster.com/*",
    "https://www.monster.com/*",
    "https://ziprecruiter.com/*",
    "https://www.ziprecruiter.com/*",
    "https://careerbuilder.com/*",
    "https://www.careerbuilder.com/*",
    "https://dice.com/*",
    "https://www.dice.com/*",
    "https://stackoverflow.com/*",
    "https://remote.co/*",
    "https://www.remote.co/*",
    "https://weworkremotely.com/*",
    "https://flexjobs.com/*",
    "https://www.flexjobs.com/*",
    "https://angel.co/*",
    "https://www.angel.co/*",
    "https://wellfound.com/*",
    "https://www.wellfound.com/*"
  ],
  "oauth2": {
    "client_id": "728714090261-hqhfnujmbl8s2cgbr65cqard6lnfksub.apps.googleusercontent.com",
    "scopes": [
      "openid",
      "email",
      "profile"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://linkedin.com/jobs/*",
        "https://www.linkedin.com/jobs/*",
        "https://indeed.com/*",
        "https://www.indeed.com/*",
        "https://glassdoor.com/*",
        "https://www.glassdoor.com/*",
        "https://monster.com/*",
        "https://www.monster.com/*",
        "https://ziprecruiter.com/*",
        "https://www.ziprecruiter.com/*",
        "https://careerbuilder.com/*",
        "https://www.careerbuilder.com/*",
        "https://dice.com/*",
        "https://www.dice.com/*",
        "https://stackoverflow.com/jobs/*",
        "https://remote.co/*",
        "https://www.remote.co/*",
        "https://weworkremotely.com/*",
        "https://flexjobs.com/*",
        "https://www.flexjobs.com/*",
        "https://angel.co/*",
        "https://www.angel.co/*",
        "https://wellfound.com/*",
        "https://www.wellfound.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Personal Recruiter - Click to open side panel",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "history.html"
      ],
      "matches": [
        "https://linkedin.com/*",
        "https://www.linkedin.com/*",
        "https://indeed.com/*", 
        "https://www.indeed.com/*",
        "https://glassdoor.com/*",
        "https://www.glassdoor.com/*",
        "https://monster.com/*",
        "https://www.monster.com/*",
        "https://ziprecruiter.com/*",
        "https://www.ziprecruiter.com/*",
        "https://careerbuilder.com/*",
        "https://www.careerbuilder.com/*",
        "https://dice.com/*",
        "https://www.dice.com/*",
        "https://stackoverflow.com/*",
        "https://remote.co/*",
        "https://www.remote.co/*",
        "https://weworkremotely.com/*",
        "https://flexjobs.com/*",
        "https://www.flexjobs.com/*",
        "https://angel.co/*",
        "https://www.angel.co/*",
        "https://wellfound.com/*",
        "https://www.wellfound.com/*"
      ]
    }
  ]
}